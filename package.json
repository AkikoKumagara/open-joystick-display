{
  "name": "open-joystick-display",
  "version": "1.0.0",
  "description": "An open source Joystick display for Twitch, YouTube, etc. ",
  "author": "Anthony Dragoni, Open Joystick Display",
  "main": "app/js/electron.js",
  "scripts": {
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "start": "electron ."
  },
  "build": {
    "appId": "open-joystick-display",
    "productName": "Open Joystick Display",
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "linux": {
      "icon": "./app/icons/icon.png",
      "target": "dir",
      "category": "Multimedia"
    },
    "win": {
      "icon": "./app/icons/icon.ico",
      "target": "dir"
    },
    "mac": {
      "icon": "./app/icons/icon.icns",
      "target": "dmg"
    }
  },
  "dependencies": {
    "clone": "^2.1.2",
    "electron-store": "^4.0.0",
    "jquery": "^3.3.1",
    "json-socket": "^0.3.0",
    "lodash": "^4.17.14",
    "original-fs": "^1.0.0",
    "promise": "^8.0.3",
    "sanitize-html": "^1.20.0",
    "serialport": "^7.1.4",
    "xmlhttprequest": "^1.8.0"
  },
  "devDependencies": {
    "clone": "^2.1.2",
    "electron": "^5.0.6",
    "electron-builder": "^21.0.15",
    "electron-rebuild": "^1.8.4",
    "electron-store": "^2.0.0",
    "gulp": "^4.0.0",
    "gulp-clean-css": "^4.0.0",
    "gulp-connect": "^5.7.0",
    "gulp-less": "^4.0.1",
    "gulp-minify": "^3.1.0",
    "jquery": "^3.3.1",
    "json-socket": "^0.3.0",
    "less": "^3.9.0",
    "node-watch": "^0.6.0",
    "stream-combiner2": "^1.1.1"
  }
}
